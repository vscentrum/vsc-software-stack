easyblock = 'MakeCp'

name = 'Pecan'
version = '1.7.2'

homepage = 'https://github.com/PecanProject/pecan'
description = """Ecosystem science, policy, and management informed by the best available data and models."""

toolchain = {'name': 'foss', 'version': '2021b'}

github_account = 'PecanProject'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']

checksums = ['7c0e215611e935d452511eb223437d7b2e7811159af1d30be3691892d898fb8f']

dependencies = [
    # Apache?  # TODO
    ('R', '4.1.2'),
    ('PostgreSQL', '13.4'),
    ('CDO', '2.0.5'),
    ('HDF5', '1.12.1'),
    # ('RStudio-Server', '?'),  # TODO
    ('netCDF', '4.8.1'),
    ('UDUNITS', '2.2.28'),
    ('texlive', '20210324'),
    ('NCO', '5.0.3'),
    ('ncview', '2.1.8'),
]

files_to_copy = [(['Pecan'], 'bin')]

sanity_check_paths = {
    'files': ['bin/Pecan'],
    'dirs': [],
}

sanity_check_commands = ['%(name)s --help']

moduleclass = 'math'
