easyblock = 'JAR'

name = 'Pilon'
version = '1.23'
versionsuffix = '-Java-%(javaver)s'

homepage = 'https://github.com/broadinstitute/pilon'
description = " Pilon is an automated genome assembly improvement and variant detection tool"

toolchain = SYSTEM

source_urls = ['https://github.com/broadinstitute/pilon/releases/download/v%(version)s/']
sources = ['pilon-%(version)s.jar']
checksums = ['bde1d3c8da5537abbc80627f0b2a4165c2b68551690e5733a6adf62413b87185']

dependencies = [('Java', '11')]

sanity_check_paths = {
    'files': ['bin/pilon', 'pilon.jar'],
    'dirs': [],
}

sanity_check_commands = ["pilon --help"]

postinstallcmds = [
    "cd %(installdir)s && ln -s %(namelower)s-%(version)s.jar pilon.jar",
    "mkdir -p %(installdir)s/bin",
    "echo '#!/bin/sh' > %(installdir)s/bin/%(namelower)s",
    "echo 'java -jar -Xmx8G %(installdir)s/%(namelower)s-%(version)s.jar $@' >> %(installdir)s/bin/%(namelower)s",
    "chmod a+rx %(installdir)s/bin/%(namelower)s"
]

moduleclass = 'bio'
